/* app.wxss */

/* ===================== 马卡龙配色变量 ===================== */
page {
  /* 主品牌色：柔和橙 */
  --color-primary: #FB8159;
  --color-primary-hover: #F98C53;

  /* 辅助马卡龙色 */
  --color-accent-green: #D2E0AA;
  --color-accent-blue: #ABD7FB;
  --color-accent-pink: #F9F2EF;
  --color-accent-orange-soft: #FCCEB4;
  --color-accent-green-soft: #D2E186;

  /* 背景 / 文本 */
  --color-bg: #FEFEFE;
  --color-bg-soft: #FDF7F2;
  --color-text-main: #3A3A3A;
  --color-text-muted: #9CA3AF;

  /* 语义色 */
  --color-success: #10B981;
  --color-warning: #F59E0B;
  --color-error: #EF4444;

  background-color: var(--color-bg-soft);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  color: var(--color-text-main);
}

.container {
  padding: 12px;
}

/* ===================== 通用卡片样式 ===================== */

/* 大场景卡：顶部色条 + 大圆角 + 轻阴影 */
.card-hero {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.08);
  overflow: hidden;
  margin-bottom: 24rpx;
}

.card-hero-header {
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, var(--color-accent-orange-soft) 0%, var(--color-accent-pink) 100%);
}

.card-hero-body {
  padding: 32rpx;
}

/* 功能入口卡：白底 + 图标 + 文本 */
.card-entry {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.06);
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.card-entry:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.08);
}

.card-entry-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.card-entry-content {
  flex: 1;
  min-width: 0;
}

.card-entry-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-main);
  margin-bottom: 8rpx;
}

.card-entry-subtitle {
  font-size: 24rpx;
  color: var(--color-text-muted);
}

/* 列表型内容卡：左 icon + 右标题/副标题 */
.card-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-list-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-list-content {
  flex: 1;
  min-width: 0;
}

.card-list-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text-main);
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-list-subtitle {
  font-size: 22rpx;
  color: var(--color-text-muted);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-list-meta {
  font-size: 20rpx;
  color: var(--color-text-muted);
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* ===================== 按钮样式 ===================== */
.btn-primary {
  background: var(--color-primary);
  color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(251, 129, 89, 0.3);
  transition: all 0.3s;
}

.btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(251, 129, 89, 0.4);
}

.btn-secondary {
  background: #fff;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s;
}

.btn-secondary:active {
  transform: scale(0.96);
  background: var(--color-accent-pink);
}

/* ===================== Pill Tab 样式 ===================== */
.pill-tabs {
  display: flex;
  gap: 12rpx;
  padding: 16rpx 0;
  overflow-x: auto;
}

.pill-tab {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #fff;
  color: var(--color-text-muted);
  font-size: 26rpx;
  white-space: nowrap;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.pill-tab.active {
  background: var(--color-accent-orange-soft);
  color: var(--color-primary);
  font-weight: 500;
}

/* ===================== 标签 Chip 样式 ===================== */
.chip {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.chip-primary {
  background: var(--color-accent-orange-soft);
  color: var(--color-primary);
}

.chip-green {
  background: var(--color-accent-green);
  color: #059669;
}

.chip-blue {
  background: var(--color-accent-blue);
  color: #0284C7;
}

.chip-pink {
  background: var(--color-accent-pink);
  color: #BE185D;
}
