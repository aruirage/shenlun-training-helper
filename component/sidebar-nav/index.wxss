/* component/sidebar-nav/index.wxss */
.sidebar-nav {
  width: 80px;
  height: 100vh;
  background: #FFFFFF;
  border-right: 1px solid #E5E7EB;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24px 0;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
}

.nav-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32px;
}

.app-logo {
  width: 40px;
  height: 40px;
  background: #000;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20px;
}

.nav-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.nav-item {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  color: #6B7280;
  transition: all 0.2s;
  font-size: 20px;
  position: relative;
}

.nav-item.active {
  background: #EEF2FF;
  color: #6366F1;
}

.active-indicator {
  position: absolute;
  left: -16px;
  width: 4px;
  height: 24px;
  background: #6366F1;
  border-radius: 0 4px 4px 0;
}

.nav-bottom {
  display: flex;
  justify-content: center;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background: #E5E7EB;
  border: 2px solid transparent;
  transition: all 0.2s;
}

.user-avatar:active {
  border-color: #6366F1;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}
