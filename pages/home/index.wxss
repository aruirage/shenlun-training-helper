/* pages/home/index.wxss */

page {
  --color-primary: #6366F1;
  --color-bg: #F8FAFF;
  --color-white: #FFFFFF;
  --color-text-main: #1F2937;
  --color-text-sub: #6B7280;
  --color-border: #E5E7EB;
  --color-success: #10B981;
  --color-warning: #F59E0B;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  
  background-color: var(--color-bg);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.home-layout {
  display: flex;
  height: 100vh;
  width: 100%;
}

/* ========== 右侧主内容区 ========== */
.home-main {
  flex: 1;
  margin-left: 80px; /* 为固定定位的侧边栏留出空间 */
  padding: 70px 40px 40px 40px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.main-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.greeting {
  font-size: 32px;
  font-weight: 700;
  color: var(--color-text-main);
  margin-bottom: 8px;
}

.sub-greeting {
  font-size: 16px;
  color: var(--color-text-sub);
}

.date-display {
  background: var(--color-white);
  padding: 8px 16px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: var(--color-text-main);
  box-shadow: var(--shadow-sm);
}

.dashboard-content {
  display: flex;
  gap: 24px;
}

/* ========== 今日练习概览卡片 ========== */
.overview-card {
  flex: 2;
  background: var(--color-white);
  border-radius: 24px;
  padding: 32px;
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title-box {
  display: flex;
  align-items: center;
  gap: 12px;
}

.trend-icon {
  color: var(--color-primary);
  font-size: 20px;
}

.card-title {
  font-size: 20px;
  font-weight: 700;
  color: var(--color-text-main);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  gap: 20px;
}

.stat-item {
  flex: 1;
}

.stat-label {
  font-size: 14px;
  color: var(--color-text-sub);
  margin-bottom: 12px;
}

.stat-value-box {
  display: flex;
  align-items: baseline;
  gap: 4px;
}

.stat-value {
  font-size: 36px;
  font-weight: 700;
  color: var(--color-text-main);
}

.stat-unit {
  font-size: 16px;
  color: var(--color-text-sub);
}

.chart-section {
  margin-top: auto;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.chart-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-main);
}

.chart-progress {
  font-size: 14px;
  color: var(--color-primary);
  font-weight: 500;
}

.chart-container {
  display: flex;
  flex-direction: column;
  gap: 16px;
  height: 160px;
  justify-content: flex-end;
}

.chart-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 100px;
  padding: 0 10px;
}

.chart-bar-item {
  width: 40px;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background: #F9FAFB;
  border-radius: 6px;
}

.bar-fill {
  width: 100%;
  background: #C7D2FE;
  border-radius: 6px;
  transition: height 0.3s;
}

.chart-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 10px;
}

.chart-labels text {
  font-size: 12px;
  color: var(--color-text-sub);
  width: 40px;
  text-align: center;
}

.chart-progress-line {
  height: 8px;
  background: #F3F4F6;
  border-radius: 4px;
  overflow: hidden;
  margin-top: 8px;
}

.progress-line-fill {
  height: 100%;
  background: var(--color-primary);
  border-radius: 4px;
}

/* ========== 右侧栏 ========== */
.side-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.ai-card {
  background: #F5F7FF;
  border-radius: 24px;
  padding: 24px;
  border: 1px solid #E0E7FF;
}

.ai-card-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 16px;
}

.ai-icon {
  color: var(--color-primary);
}

.ai-title {
  font-size: 16px;
  font-weight: 700;
  color: var(--color-primary);
}

.ai-content {
  font-size: 15px;
  line-height: 1.6;
  color: var(--color-text-main);
}

.action-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.action-item {
  background: var(--color-white);
  border-radius: 16px;
  padding: 16px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-sm);
  border: 1px solid transparent;
  transition: all 0.2s;
}

.action-item:active {
  border-color: var(--color-primary);
  background: #F9FAFB;
}

.action-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.action-icon {
  font-size: 18px;
}

.action-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-main);
}

.action-right {
  display: flex;
  align-items: center;
  gap: 8px;
}

.action-badge {
  font-size: 12px;
  padding: 4px 10px;
  border-radius: 20px;
  background: #FFF7ED;
  color: #C2410C;
  font-weight: 600;
}

.action-badge.green {
  background: #ECFDF5;
  color: #059669;
}

.arrow-icon {
  color: #D1D5DB;
  font-size: 18px;
}
