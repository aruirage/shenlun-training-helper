/* pages/home/index.wxss - 任务中枢 */

.home-root {
  min-height: 100vh;
  padding: 32rpx;
  background: var(--color-bg-soft);
}

/* ===================== 欢迎卡片 ===================== */
.welcome-card {
  padding: 40rpx 32rpx !important;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #FCCEB4 0%, #F9F2EF 100%) !important;
}

.welcome-greeting {
  margin-bottom: 24rpx;
}

.greeting-text {
  font-size: 32rpx;
  color: var(--color-text-main);
}

.greeting-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-left: 8rpx;
}

.search-placeholder {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-text {
  font-size: 28rpx;
  color: var(--color-text-muted);
}

/* ===================== 功能入口区 ===================== */
.entry-cards-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-main);
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-more {
  font-size: 24rpx;
  color: var(--color-primary);
  font-weight: 400;
}

/* ===================== 最近练习 ===================== */
.recent-section {
  margin-bottom: 32rpx;
}

.recent-scroll {
  width: 100%;
  white-space: nowrap;
}

.recent-list {
  display: inline-flex;
  gap: 16rpx;
  padding-bottom: 16rpx;
}

.recent-item {
  min-width: 520rpx;
  display: inline-flex !important;
}

/* ===================== iPad 布局 ===================== */
.pad-layout .pad-container {
  display: flex;
  gap: 32rpx;
  max-width: 1400rpx;
  margin: 0 auto;
}

.pad-layout .pad-nav {
  width: 280rpx;
  flex-shrink: 0;
}

.pad-layout .pad-main {
  flex: 1;
  min-width: 0;
}

.pad-layout .pad-right {
  width: 380rpx;
  flex-shrink: 0;
}

/* 统计面板 */
.stats-panel {
  padding: 32rpx !important;
  margin-bottom: 24rpx;
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-date {
  font-size: 28rpx;
  color: var(--color-text-main);
  font-weight: 600;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stats-item {
  text-align: center;
  padding: 24rpx;
  background: var(--color-bg-soft);
  border-radius: 16rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--color-text-muted);
}

/* iPad 热点列表 */
.recent-list-pad {
  max-height: 600rpx;
  overflow-y: auto;
}

.recent-list-pad .card-list {
  margin-bottom: 12rpx;
}

/* ===================== 响应式适配 ===================== */
.phone-layout {
  padding: 24rpx;
}

.pad-layout {
  padding: 40rpx;
}

/* ================ 左侧导航样式 ================ */
.sidebar-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.sidebar-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-main);
  margin-bottom: 8rpx;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: var(--color-bg-soft);
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.nav-content {
  display: flex;
  flex-direction: column;
}

.nav-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-main);
}

.nav-subtitle {
  font-size: 24rpx;
  color: var(--color-text-muted);
}

/* 横屏适配 */
@media (orientation: landscape) and (min-width: 768px) {
  .pad-layout .pad-container {
    max-width: 1600rpx;
  }

  .pad-layout .pad-right {
    width: 460rpx;
  }
}
