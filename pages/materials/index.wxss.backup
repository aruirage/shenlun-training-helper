/* pages/materials/index.wxss */
.materials-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 过滤条 */
.filter-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx #e0e0e0;
}

.filter-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f7fa;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
  white-space: nowrap;
}

.picker {
  flex: 1;
}

.picker-text {
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

/* 类型 Tab */
.type-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  background: #f5f7fa;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

/* 示例素材卡片 */
.sample-material-section {
  padding: 30rpx;
  margin-bottom: 0;
}

.sample-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.sample-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.sample-card {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(252, 182, 159, 0.3);
}

.sample-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #5a3825;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.sample-type-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  background: #667eea;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.sample-content {
  font-size: 24rpx;
  color: #5a3825;
  line-height: 1.6;
  margin-bottom: 16rpx;
  white-space: pre-wrap;
  word-break: break-word;
}

.sample-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.sample-tags .tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.7);
  color: #5a3825;
  border-radius: 6rpx;
}

.sample-action {
  display: flex;
  justify-content: flex-end;
}

.sample-btn {
  padding: 14rpx 28rpx;
  background: #fff;
  color: #5a3825;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 10rpx;
  text-align: center;
  transition: all 0.2s;
}

.sample-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

/* 素材列表 */
.materials-list {
  padding: 0;
}

/* ============ Notion 风格块卡片 ============ */
.material-block {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  margin: 12rpx 16rpx;
  border-radius: 12rpx;
  background-color: #f7f7f9;
  box-shadow: 0 2rpx 6rpx rgba(15, 23, 42, 0.06);
  transition: all 0.2s;
}

.material-block:active {
  background-color: #efefef;
}

/* 块内部：勾选框 */
.block-checkbox {
  margin-right: 12rpx;
  display: flex;
  align-items: flex-start;
  padding-top: 4rpx;
  flex-shrink: 0;
}

.block-checkbox .checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  background: #fff;
}

.block-checkbox .checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.block-checkbox .check-icon {
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
}

/* 块内部：类型图标 */
.block-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.block-icon-anli {
  background: linear-gradient(135deg, #4f46e5, #6366f1);
}

.block-icon-shuju {
  background: linear-gradient(135deg, #059669, #10b981);
}

.block-icon-jinju {
  background: linear-gradient(135deg, #7c3aed, #a855f7);
}

.block-icon-zhengce {
  background: linear-gradient(135deg, #2563eb, #38bdf8);
}

.block-icon-other {
  background: linear-gradient(135deg, #64748b, #78716c);
}

/* 块内部：中间文本区域 */
.block-main {
  flex: 1;
  min-width: 0;
  margin-right: 12rpx;
}

.block-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.block-desc {
  font-size: 24rpx;
  color: #6b7280;
  max-height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

/* 块内部：右侧标签区域 */
.block-tags {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
  flex-shrink: 0;
}

/* 通用标签样式 */
.tag {
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 18rpx;
  line-height: 1.4;
  max-width: 200rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 领域标签（彩色背景） */
.tag-macro-minsheng {
  background-color: #e0f2fe;
  color: #1d4ed8;
}

.tag-macro-keji {
  background-color: #f3e8ff;
  color: #7c3aed;
}

.tag-macro-shengtai {
  background-color: #dcfce7;
  color: #15803d;
}

.tag-macro-zhili {
  background-color: #fef3c7;
  color: #b45309;
}

.tag-macro-other {
  background-color: #e5e7eb;
  color: #374151;
}

/* 政策/分论点标签（灰底） */
.tag-policy,
.tag-sub {
  background-color: #e5e7eb;
  color: #374151;
}

/* type 标签（边框样式） */
.tag-type-anli {
  border: 1rpx solid #4f46e5;
  color: #4f46e5;
  background: transparent;
}

.tag-type-shuju {
  border: 1rpx solid #059669;
  color: #059669;
  background: transparent;
}

.tag-type-jinju {
  border: 1rpx solid #7c3aed;
  color: #7c3aed;
  background: transparent;
}

.tag-type-zhengce {
  border: 1rpx solid #2563eb;
  color: #2563eb;
  background: transparent;
}

.tag-type-other {
  border: 1rpx solid #64748b;
  color: #64748b;
  background: transparent;
}

/* 标签编辑抽屉 */
.tag-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  z-index: 200;
  transition: all 0.3s;
}

.tag-drawer.hide {
  display: none;
}

.tag-drawer.show {
  display: flex;
}

.drawer-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  opacity: 0.5;
  z-index: 1;
}

.drawer-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
  z-index: 2;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #ccc;
  padding: 0 10rpx;
}

.drawer-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.drawer-hint {
  background: #f0f5ff;
  color: #1890ff;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  border-left: 4rpx solid #1890ff;
}

.editing-material-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.6;
  font-weight: 500;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-item {
  margin-bottom: 24rpx;
}

.item-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.item-picker {
  display: block;
  width: 100%;
}

.picker-display {
  background: #f5f7fa;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  border: 1rpx solid #eee;
}

.drawer-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn {
  flex: 1;
  padding: 18rpx 0;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-cancel:active {
  background: #e8e8e8;
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-submit:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-submit.loading {
  opacity: 0.7;
}
