  padding: 14rpx 0;
  font-size: 22rpx;
}

/* ===================== iPad 三栏飞书式布局 ===================== */

/* 三栏主容器 */
.pad-layout {
  display: flex;
  flex-direction: row;
  height: 100vh;
  background: #fff;
}

/* 三栏公共样式 */
.pad-col {
  box-sizing: border-box;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 左侧导航栏：22% 宽度 */
.pad-nav {
  width: 22%;
  border-right: 1rpx solid #e5e7eb;
  padding: 20rpx 16rpx;
  background: #fafbfc;
}

.nav-header {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
  margin-bottom: 16rpx;
}

.nav-section {
  margin-bottom: 20rpx;
}

.nav-title {
  font-size: 20rpx;
  font-weight: 500;
  color: #666;
  text-transform: uppercase;
  padding: 12rpx 12rpx;
  margin-bottom: 8rpx;
}

.nav-item {
  font-size: 24rpx;
  color: #555;
  padding: 12rpx 12rpx;
  margin-bottom: 4rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.2s, color 0.2s;
}

.nav-item:hover {
  background-color: #f0f0f0;
}

.nav-item.active {
  background-color: #e3f2fd;
  color: #1976d2;
  font-weight: 500;
}

/* 中间列表栏：38% 宽度 */
.pad-list {
  width: 38%;
  border-right: 1rpx solid #e5e7eb;
  padding: 12rpx 8rpx;
  background: #fff;
  overflow-y: auto;
}

/* 右侧详情栏：flex:1 */
.pad-detail {
  flex: 1;
  padding: 30rpx 24rpx;
  background: #f5f7fa;
  overflow-y: auto;
}

/* 右侧详情面板内容 */
.detail-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.detail-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 24rpx;
  white-space: pre-wrap;
  word-break: break-word;
}

.detail-meta {
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.meta-row:last-child {
  margin-bottom: 0;
}

.meta-label {
  color: #999;
  min-width: 80rpx;
  font-weight: 500;
}

.meta-value {
  color: #666;
  flex: 1;
}

.meta-expired {
  color: #d32f2f;
}

.meta-hot {
  color: #f57c00;
}

/* 详情标签区域 */
.detail-tags-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 12rpx;
}

.detail-tags {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex-wrap: wrap;
}

.detail-tags .tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
}

/* 右侧详情按钮 */
.detail-action {
  display: flex;
  gap: 12rpx;
}

.btn-edit {
  flex: 1;
  padding: 16rpx;
  background: #1976d2;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s;
}

.btn-edit:active {
  background-color: #1565c0;
}

/* 右侧无选择状态 */
.detail-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

/* 中间列表在三栏模式下的适配 */
.pad-list .materials-list {
  padding: 0;
}

.pad-list .material-block {
  margin: 8rpx 4rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
}

.pad-list .block-title {
  font-size: 26rpx;
}

.pad-list .block-desc {
  font-size: 22rpx;
}

.pad-list .block-icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 20rpx;
}

.pad-list .tag {
  font-size: 18rpx;
  padding: 3rpx 8rpx;
}

/* 示例素材卡片在三栏模式下的样式 */
.pad-list .sample-material-section {
  margin: 8rpx 4rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.pad-list .sample-card {
  background: #fff;
  border-radius: 8rpx;
  padding: 12rpx;
}

.pad-list .sample-title {
  font-size: 24rpx;
  font-weight: 500;
}

.pad-list .sample-desc {
  font-size: 20rpx;
  color: #666;
  margin: 8rpx 0;
}

.pad-list .sample-btn {
  font-size: 20rpx;
  padding: 8rpx 12rpx;
}

/* 加载和空状态 */
.pad-list .empty-state,
.pad-list .loading,
.pad-list .load-more,
.pad-list .no-more {
  text-align: center;
  padding: 20rpx 16rpx;
  font-size: 24rpx;
  color: #999;
}