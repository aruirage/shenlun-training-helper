/* pages/materials/index.wxss - React Minimalist Design */

/* CSS Variables */
page {
  --color-primary: #5A7D9A;
  --color-bg: #F9F9F8;
  --color-border: #EFEEEE;
  --color-text-main: #1A1A1A;
  --color-text-secondary: #6B7280;
  --color-white: #FFFFFF;
  --color-hover: #F5F5F4;
  --color-active: rgba(90, 125, 154, 0.04);
  background-color: var(--color-bg);
}

.container {
  min-height: 100vh;
}

/* ==================== iPad 三栏布局 ==================== */
.pad-layout {
  display: flex;
  height: 100vh;
  background: var(--color-bg);
}

.pad-col {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 左侧导航 */
.pad-nav {
  width: 240rpx;
  background: var(--color-white);
  border-right: 1rpx solid var(--color-border);
  padding: 40rpx 0;
}

/* 中间列表 */
.pad-list {
  flex: 1;
  background: var(--color-bg);
  padding: 40rpx;
}

/* 右侧详情 */
.pad-detail {
  width: 360rpx;
  background: var(--color-white);
  border-left: 1rpx solid var(--color-border);
  padding: 40rpx;
}

/* ==================== 树形导航 ==================== */
.nav-tree {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nav-group {
  display: flex;
  flex-direction: column;
}

.nav-group-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: var(--color-text-main);
  font-weight: 500;
  cursor: pointer;
  transition: background 0.2s;
}

.nav-group-header:active {
  background: var(--color-hover);
}

.nav-expand-icon {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  transition: transform 0.2s;
}

.nav-group-header.expanded .nav-expand-icon {
  transform: rotate(90deg);
}

.nav-group-children {
  display: flex;
  flex-direction: column;
  border-left: 2rpx solid var(--color-border);
  margin-left: 32rpx;
  padding-left: 20rpx;
}

.nav-child-item {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  cursor: pointer;
  transition: all 0.2s;
  border-radius: 8rpx;
}

.nav-child-item:active {
  background: var(--color-hover);
}

.nav-child-item.active {
  background: var(--color-active);
  color: var(--color-primary);
  font-weight: 500;
}

/* ==================== 中间列表区 ==================== */
.list-header {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-main);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--color-white);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  gap: 12rpx;
}

.search-icon {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-text-main);
  background: transparent;
}

.search-input::placeholder {
  color: var(--color-text-secondary);
}

/* 筛选 Chips */
.filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: var(--color-white);
  border: 1rpx solid var(--color-border);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--color-text-main);
}

.chip-close {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  cursor: pointer;
  font-weight: bold;
}

.chip-close:active {
  color: var(--color-primary);
}

/* 类型 Tabs */
.type-tabs-row {
  display: flex;
  gap: 32rpx;
  border-bottom: 1rpx solid var(--color-border);
  margin-bottom: 24rpx;
}

.tab-item {
  padding: 16rpx 8rpx;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  cursor: pointer;
  position: relative;
  transition: color 0.2s;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: var(--color-primary);
}

/* 素材列表滚动区 */
.materials-list-scroll {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 素材卡片 */
.material-card {
  background: var(--color-white);
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.04);
  cursor: pointer;
  transition: all 0.2s;
}

.material-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.08);
}

.material-card.selected {
  border: 2rpx solid var(--color-primary);
}

.card-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.card-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text-main);
  line-height: 1.4;
}

.card-type-badge {
  flex-shrink: 0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: var(--color-white);
  font-weight: 500;
}

.card-type-badge.anli { background: #10B981; }
.card-type-badge.zhengce { background: #6366F1; }
.card-type-badge.shuju { background: #F59E0B; }
.card-type-badge.jinju { background: #EC4899; }

.card-content {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-policy-tag {
  padding: 4rpx 8rpx;
  background: var(--color-hover);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: var(--color-primary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: var(--color-text-secondary);
  font-size: 26rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

/* ==================== 右侧详情区 ==================== */
.detail-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.detail-icon {
  font-size: 32rpx;
}

.detail-subtitle {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.detail-body {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.detail-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.detail-content-text {
  font-size: 26rpx;
  color: var(--color-text-main);
  line-height: 1.7;
  padding: 16rpx;
  background: var(--color-hover);
  border-left: 3rpx solid var(--color-primary);
  border-radius: 8rpx;
  font-style: italic;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.detail-tag {
  padding: 8rpx 16rpx;
  background: var(--color-active);
  color: var(--color-primary);
  border-radius: 8rpx;
  font-size: 24rpx;
}

.detail-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-bookmark {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: var(--color-text-main);
  color: var(--color-white);
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  transition: opacity 0.2s;
}

.btn-bookmark:active {
  opacity: 0.8;
}

.btn-icon {
  font-size: 28rpx;
}

.detail-hint {
  display: flex;
  gap: 12rpx;
  padding: 16rpx;
  background: rgba(90, 125, 154, 0.06);
  border-radius: 8rpx;
  border-left: 3rpx solid var(--color-primary);
}

.hint-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.hint-text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.detail-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

/* ==================== 手机单栏布局 ==================== */
.phone-layout {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--color-bg);
}

/* 手机过滤条 */
.phone-filter-bar {
  background: var(--color-white);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.phone-search {
  display: flex;
  align-items: center;
  background: var(--color-hover);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  gap: 12rpx;
}

.phone-search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
}

.phone-filter-chips {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.phone-filter-chips::-webkit-scrollbar {
  display: none;
}

.phone-filter-chip {
  flex-shrink: 0;
  padding: 10rpx 20rpx;
  background: var(--color-hover);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--color-text-main);
  cursor: pointer;
}

.phone-filter-chip.active {
  background: var(--color-primary);
  color: var(--color-white);
}

.phone-nav-btn {
  padding: 12rpx 24rpx;
  background: var(--color-white);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text-main);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 手机列表 */
.phone-list {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 手机素材卡片 */
.phone-material-card {
  background: var(--color-white);
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.04);
}

.phone-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.phone-card-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text-main);
  line-height: 1.4;
}

.phone-card-content {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.phone-card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.phone-card-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.phone-card-tag {
  padding: 4rpx 12rpx;
  background: var(--color-hover);
  border-radius: 6rpx;
  font-size: 22rpx;
}

/* 手机空状态 */
.phone-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: var(--color-text-secondary);
  font-size: 28rpx;
}

/* 手机加载中 */
.phone-loading {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* ==================== 抽屉/弹窗通用样式 ==================== */
.drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: none;
  align-items: flex-end;
}

.drawer.show {
  display: flex;
}

.drawer-content {
  width: 100%;
  max-height: 80vh;
  background: var(--color-white);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--color-border);
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-main);
}

.close-btn {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  cursor: pointer;
}

.drawer-body {
  flex: 1;
  overflow-y: auto;
}

.drawer-footer {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--color-border);
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  cursor: pointer;
  transition: opacity 0.2s;
}

.btn:active {
  opacity: 0.8;
}

.btn-cancel {
  background: var(--color-hover);
  color: var(--color-text-main);
}

.btn-submit {
  background: var(--color-primary);
  color: var(--color-white);
}

.btn-submit.loading {
  opacity: 0.6;
  pointer-events: none;
}
