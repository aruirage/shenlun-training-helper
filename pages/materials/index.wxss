/* pages/materials/index.wxss */
page {
  background-color: #F8FAFF;
  height: 100vh;
  overflow: hidden;
}

.container {
  display: flex;
  height: 100vh;
  width: 100vw;
}

/* 主内容区 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 40px 60px;
  overflow: hidden;
  margin-left: 80px;
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 40px;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.title {
  font-size: 32px;
  font-weight: 700;
  color: #1E293B;
}

.subtitle {
  font-size: 16px;
  color: #94A3B8;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.search-bar {
  width: 320px;
  height: 48px;
  background: #FFFFFF;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  gap: 12px;
}

.search-icon {
  font-size: 18px;
  color: #94A3B8;
}

.search-bar input {
  flex: 1;
  font-size: 14px;
  color: #1E293B;
}

.add-btn {
  width: 48px;
  height: 48px;
  background: #1E293B;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.plus-icon {
  font-size: 24px;
  font-weight: 300;
}

/* Tabs Bar */
.tabs-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F1F5F9;
  margin-bottom: 32px;
}

.tabs-left {
  display: flex;
  gap: 40px;
}

.tab-item {
  padding: 12px 0;
  font-size: 16px;
  color: #94A3B8;
  position: relative;
  cursor: pointer;
}

.tab-item.active {
  color: #1E293B;
  font-weight: 600;
}

.active-line {
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background-color: #1E293B;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #64748B;
}

/* Materials Grid */
.materials-grid-scroll {
  flex: 1;
}

.materials-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
  padding-bottom: 40px;
}

.material-card {
  background: #FFFFFF;
  border: 1px solid #F1F5F9;
  border-radius: 16px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
  transition: transform 0.2s;
}

.material-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-text {
  font-size: 12px;
  color: #6366F1;
  background: #EEF2FF;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 600;
}

.type-tag-simple {
  font-size: 12px;
  color: #94A3B8;
  font-weight: 500;
}

.card-body {
  flex: 1;
  margin: 12px 0;
}

.content-text {
  font-family: "Noto Serif SC", serif;
  font-size: 18px;
  line-height: 1.6;
  color: #334155;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: auto;
}

.footer-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 11px;
  color: #94A3B8;
}

.footer-right {
  display: flex;
  align-items: center;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 12px;
}

.tag-pill-simple {
  font-size: 11px;
  color: #6366F1;
  background: #EEF2FF;
  padding: 2px 8px;
  border-radius: 4px;
}

/* 熟练度指示器 */
.proficiency-indicator {
  display: flex;
  gap: 3px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: #F1F5F9;
}

.dot.active {
  background-color: #6366F1;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal-content {
  background: #FFFFFF;
  border-radius: 24px;
  width: 600px;
  max-width: 90%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
  animation: modalFadeIn 0.3s ease-out;
  overflow: hidden;
}

.filter-modal {
  width: 480px;
}

.filter-group {
  margin-bottom: 24px;
}

.group-title {
  font-size: 14px;
  font-weight: 700;
  color: #94A3B8;
  margin-bottom: 12px;
  text-transform: uppercase;
}

.group-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.filter-item {
  padding: 8px 16px;
  background: #F8FAFF;
  border: 1px solid #E8EEFF;
  border-radius: 8px;
  font-size: 14px;
  color: #4E5969;
}

.filter-item.active {
  background: #6366F1;
  color: #FFFFFF;
  border-color: #6366F1;
}

@keyframes modalFadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.modal-header {
  padding: 24px 32px;
  border-bottom: 1px solid #F1F5F9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 20px;
  font-weight: 600;
  color: #1E293B;
}

.close-btn {
  font-size: 28px;
  color: #94A3B8;
  cursor: pointer;
  line-height: 1;
}

.modal-body {
  padding: 32px;
  overflow-y: auto;
}

/* 详情弹窗特有 */
.detail-category {
  font-size: 14px;
  color: #6366F1;
  margin-bottom: 16px;
}

.detail-content {
  margin-bottom: 32px;
}

.case-section {
  margin-bottom: 24px;
}

.case-section-title {
  font-size: 14px;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 8px;
  padding-left: 10px;
  border-left: 3px solid #6366F1;
}

.case-section-content {
  font-family: "Noto Serif SC", serif;
  font-size: 16px;
  line-height: 1.6;
  color: #475569;
  background: #F8FAFF;
  padding: 12px;
  border-radius: 8px;
}

.serif-text {
  font-family: "Noto Serif SC", serif;
  font-size: 20px;
  line-height: 1.8;
  color: #1E293B;
}

.detail-meta {
  background: #F8FAFF;
  padding: 16px;
  border-radius: 12px;
  margin-bottom: 24px;
}

.meta-label {
  font-size: 14px;
  color: #64748B;
}

.meta-link {
  font-size: 14px;
  color: #6366F1;
  word-break: break-all;
}

.detail-footer {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  color: #94A3B8;
  border-top: 1px solid #F1F5F9;
  padding-top: 20px;
}

/* 添加弹窗特有 */
.form-item {
  margin-bottom: 24px;
}

.form-item .label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #64748B;
  margin-bottom: 8px;
}

.picker-val, .form-item input, .form-item textarea {
  width: 100%;
  background: #F8FAFF;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  padding: 12px 16px;
  font-size: 15px;
  box-sizing: border-box;
}

.form-item textarea {
  height: 120px;
}

.confirm-btn {
  width: 100%;
  height: 52px;
  background: #1E293B;
  color: white;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16px;
}

.empty-state {
  padding: 100px 0;
  text-align: center;
  color: #94A3B8;
  font-size: 16px;
}
