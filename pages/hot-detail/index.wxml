<view class="container">
  <sidebar-nav activeNav="今日热点" userAvatar="{{userAvatar}}"></sidebar-nav>

  <view class="main-content">
    <view class="header-nav">
      <view class="back-btn" bindtap="goBack">
        <text class="icon">〈</text>
        <text>返回列表</text>
      </view>
      <view class="header-actions">
        <button class="btn-share" open-type="share">分享</button>
      </view>
    </view>

    <scroll-view scroll-y class="detail-scroll">
      <view class="content-wrapper">
        <!-- 标题与元信息 -->
        <view class="article-header">
          <text class="article-title">{{hotspot.title || '加载中...'}}</text>
          <view class="article-meta">
            <text class="date">{{hotspot.date || ''}}</text>
            <text class="source-tag">AI 结构化改写</text>
          </view>
        </view>

        <!-- 标签 -->
        <view class="tags-row">
          <text wx:for="{{hotspot.tags}}" wx:key="*this" class="tag-pill"># {{item}}</text>
        </view>

        <view class="grid-layout">
          <!-- 左侧：事件要点与核心表述 -->
          <view class="grid-left">
            <view class="section-card">
              <view class="section-title">
                <text class="title-icon">📋</text>
                <text>事件要点</text>
              </view>
              <view class="timeline-list">
                <view wx:for="{{hotspot.timeline}}" wx:key="index" class="timeline-item">
                  <view class="dot"></view>
                  <text class="timeline-text">{{item}}</text>
                </view>
              </view>
            </view>

            <view class="section-card">
              <view class="section-title">
                <text class="title-icon">💬</text>
                <text>核心表述</text>
              </view>
              <view class="quotes-list">
                <view wx:for="{{hotspot.keyPoints}}" wx:key="index" class="quote-item">
                  <text class="quote-text">{{item}}</text>
                </view>
              </view>
            </view>
          </view>

          <!-- 右侧：申论价值与摘要 -->
          <view class="grid-right">
            <view class="section-card highlight">
              <view class="section-title">
                <text class="title-icon">🎯</text>
                <text>申论热点</text>
              </view>
              <view class="exam-value">
                <text>{{hotspot.examValue}}</text>
              </view>
            </view>

            <view class="section-card">
              <view class="section-title">
                <text class="title-icon">📄</text>
                <text>事件摘要</text>
              </view>
              <view class="summary-text">
                <text>{{hotspot.summary}}</text>
              </view>
            </view>
          </view>
        </view>

        <!-- 底部操作栏 -->
        <view class="bottom-actions">
          <button class="btn-train" bindtap="goToTraining">
            <text class="btn-icon">🚀</text>
            <text>开始训练</text>
          </button>
        </view>
      </view>
    </scroll-view>
  </view>
</view>