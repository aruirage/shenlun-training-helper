.container {
  display: flex;
  width: 100%;
  min-height: 100vh;
  background-color: #F9F9F8;
}

/* 左侧导航栏 */
.sidebar {
  width: 240px;
  background-color: #FFFFFF;
  border-right: 1px solid #E8E8E8;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
  overflow-y: auto;
}

.logo-wrap {
  width: 100%;
  text-align: center;
  padding: 20px 0;
  border-bottom: 1px solid #F0F0F0;
  margin-bottom: 20px;
}

.logo-main {
  font-size: 14px;
  font-weight: 600;
  color: #5A7D9A;
}

.nav-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0;
  flex: 1;
}

.nav-item {
  width: 100%;
  padding: 12px 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #666;
  cursor: pointer;
  transition: all 0.2s ease;
  border-left: 3px solid transparent;
}

.nav-item:hover {
  background-color: #F5F5F5;
}

.nav-item.nav-active {
  background-color: #EEF4F9;
  color: #5A7D9A;
  border-left-color: #5A7D9A;
  font-weight: 500;
}

.nav-icon {
  font-size: 16px;
  min-width: 16px;
  text-align: center;
}

.nav-text {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-box {
  width: 100%;
  padding: 16px 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  border-top: 1px solid #F0F0F0;
  cursor: pointer;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: #5A7D9A;
  flex-shrink: 0;
}

.user-name {
  font-size: 12px;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
  border-left: 4px solid #5A7D9A;
  padding-left: 10px;
}

/* Summary Card */
.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 24px;
  font-weight: 700;
  color: #5A7D9A;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #666;
}

/* Module Card */
.module-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.module-item {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #333;
  padding-bottom: 8px;
  border-bottom: 1px solid #F0F0F0;
}

.module-item:last-child {
  border-bottom: none;
}

.module-val {
  font-weight: 500;
  color: #5A7D9A;
}

/* Topic Card */
.topic-list {
  display: flex;
  flex-direction: column;
}

.topic-header {
  display: flex;
  font-size: 12px;
  color: #999;
  padding-bottom: 8px;
  border-bottom: 1px solid #F0F0F0;
  margin-bottom: 8px;
}

.topic-header text, .topic-item text {
  flex: 1;
  text-align: center;
}

.topic-header text:first-child, .topic-item text:first-child {
  text-align: left;
  flex: 2;
}

.topic-item {
  display: flex;
  font-size: 14px;
  color: #333;
  padding: 8px 0;
  border-bottom: 1px solid #F9F9F9;
}

.topic-item:last-child {
  border-bottom: none;
}

.footer-action {
  margin-top: 30px;
  display: flex;
  justify-content: center;
}

.home-btn {
  background-color: #5A7D9A;
  color: white;
  font-size: 14px;
  padding: 10px 30px;
  border-radius: 20px;
}