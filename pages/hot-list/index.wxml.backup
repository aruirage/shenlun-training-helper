<view class="page">
  <view class="sidebar" wx:if="{{false}}">
    <!-- 如果以后想做 iPad 侧边栏，可以复用 home 的 -->
  </view>

  <view class="main">
    <view class="card">
      <view class="header-row">
        <view class="title">今日热点</view>
        <view class="date">{{currentDate}}</view>
      </view>
      <view class="sub">每天精选 3 个时政热点，供你做分论点和段落训练。</view>
    </view>

    <view class="list">
      <block wx:for="{{hotList}}" wx:key="id">
        <view class="card topic-card" data-id="{{item.id}}" bindtap="goToTrain">
          <view class="topic-title">{{item.title}}</view>
          <view class="topic-desc">{{item.description}}</view>
          <view class="topic-meta">
            <view class="tag tag-source">{{item.source}}</view>
            <view class="tag tag-date">{{item.date}}</view>
            <view class="tag tag-field">{{item.macroField}}</view>
            <view class="tag tag-direction">{{item.policyDirection}}</view>
          </view>
          <view class="topic-action">进入训练 ></view>
        </view>
      </block>
    </view>
  </view>
</view>
