.page {
  min-height: 100vh;
  background-color: #f5f5f7;
  box-sizing: border-box;
}

.main {
  padding: 32rpx;
  box-sizing: border-box;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
  padding: 24rpx 28rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
}

.date {
  font-size: 24rpx;
  color: #6b7280;
}

.sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  row-gap: 16rpx;
}

.topic-card {}

.topic-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.topic-desc {
  font-size: 24rpx;
  color: #4b5563;
  margin-bottom: 12rpx;
}

.topic-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.topic-action {
  font-size: 24rpx;
  color: #10b981;
}

/* 标签通用 */
.tag {
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background-color: #f3f4f6;
  color: #4b5563;
}

.tag-source {
  background-color: #eff6ff;
  color: #2563eb;
}

.tag-field {
  background-color: #ecfdf3;
  color: #166534;
}

.tag-direction {
  background-color: #f5f3ff;
  color: #7c3aed;
}

.tag-date {
  background-color: #fef9c3;
  color: #854d0e;
}
