/* pages/hot-list/index.wxss */

page {
  --color-primary: #6366F1;
  --color-bg: #F8FAFF;
  --color-white: #FFFFFF;
  --color-text-main: #1F2937;
  --color-text-sub: #6B7280;
  --color-border: #E5E7EB;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  
  background-color: var(--color-bg);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.home-layout {
  display: flex;
  height: 100vh;
  width: 100%;
}

/* ========== 左侧导航 (与首页一致) ========== */
.home-nav {
  width: 80px;
  background: var(--color-white);
  border-right: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24px 0;
  flex-shrink: 0;
}

.nav-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32px;
}

.app-logo {
  width: 40px;
  height: 40px;
  background: #000;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20px;
}

.nav-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.nav-item {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  color: var(--color-text-sub);
  transition: all 0.2s;
  font-size: 20px;
}

.nav-item.active {
  background: #EEF2FF;
  color: var(--color-primary);
}

.nav-bottom {
  display: flex;
  justify-content: center;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background: #E5E7EB;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

/* ========== 右侧主内容区 ========== */
.home-main {
  flex: 1;
  margin-left: 80px;
  padding: 40px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.main-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.greeting {
  font-size: 32px;
  font-weight: 700;
  color: var(--color-text-main);
  margin-bottom: 8px;
}

.sub-greeting {
  font-size: 16px;
  color: var(--color-text-sub);
}

.search-bar {
  background: var(--color-white);
  width: 320px;
  height: 48px;
  border-radius: 12px;
  border: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  padding: 0 16px;
  gap: 12px;
  box-shadow: var(--shadow-sm);
}

.search-icon {
  font-size: 18px;
  color: var(--color-text-sub);
}

.search-input {
  flex: 1;
  font-size: 14px;
}

.search-placeholder {
  color: #9CA3AF;
}

/* ========== 热点列表卡片 ========== */
.topic-list {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.topic-card {
  background: var(--color-white);
  border-radius: 24px;
  padding: 32px;
  box-shadow: var(--shadow-sm);
  border: 1px solid transparent;
  transition: all 0.2s;
}

.card-content {
  display: flex;
  justify-content: space-between;
  gap: 40px;
}

.topic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.topic-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--color-text-main);
  line-height: 1.4;
}

.topic-summary {
  font-size: 16px;
  color: var(--color-text-sub);
  line-height: 1.6;
}

.topic-footer {
  display: flex;
  align-items: center;
  gap: 24px;
  margin-top: 8px;
}

.topic-tags {
  display: flex;
  gap: 12px;
}

.tag {
  font-size: 13px;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4px 12px;
  border-radius: 20px;
}

.topic-date {
  font-size: 13px;
  color: #9CA3AF;
}

.card-actions {
  display: flex;
  flex-direction: column;
  gap: 12px;
  width: 140px;
  flex-shrink: 0;
}

.btn-generate {
  background: #111827;
  color: white;
  border-radius: 12px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 14px;
  font-weight: 600;
  width: 100% !important;
  padding: 0 !important;
}

.btn-train {
  background: white;
  color: var(--color-text-main);
  border: 1px solid var(--color-border);
  border-radius: 12px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 14px;
  font-weight: 600;
  width: 100% !important;
  padding: 0 !important;
}

.btn-arrow {
  font-size: 16px;
}

/* ========== AI 生成区域 ========== */
.ai-materials-area {
  margin-top: 24px;
  padding-top: 24px;
  border-top: 1px dashed var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.ai-materials-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ai-materials-header .header-left {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 15px;
  font-weight: 700;
  color: var(--color-primary);
}

.expand-toggle {
  font-size: 12px;
  color: var(--color-text-sub);
}

.materials-scroll {
  width: 100%;
}

.materials-row {
  display: flex;
  gap: 16px;
  padding-bottom: 8px;
}

.material-mini-card {
  flex-shrink: 0;
  width: 240px;
  background: #FFFFFF;
  border-radius: 16px;
  padding: 16px;
  border: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 12px;
  box-shadow: var(--shadow-sm);
}

.mini-card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mini-tag {
  font-size: 10px;
  color: var(--color-primary);
  background: #EEF2FF;
  padding: 2px 8px;
  border-radius: 4px;
}

.mini-type {
  font-size: 10px;
  padding: 2px 8px;
  border-radius: 999px;
  font-weight: 600;
}

.badge-type-jinju { background: #fef3c7; color: #92400e; }
.badge-type-anli { background: #e0f2fe; color: #075985; }
.badge-type-zhengce { background: #ede9fe; color: #5b21b6; }
.badge-type-duice { background: #dcfce7; color: #166534; }
.badge-type-pianduan { background: #fee2e2; color: #b91c1c; }

.mini-card-content {
  font-size: 14px;
  color: var(--color-text-main);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.mini-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.mini-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.btn-collect-mini {
  width: 24px;
  height: 24px;
  background: #F8FAFF;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: var(--color-primary);
  border: 1px solid #E8EEFF;
}

.mini-source {
  font-size: 11px;
  color: var(--color-text-sub);
}

.mini-prof-bar {
  width: 40px;
  height: 4px;
  background: #F1F5F9;
  border-radius: 2px;
  overflow: hidden;
}

.mini-prof-fill {
  height: 100%;
  background: var(--color-primary);
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 90%;
  max-width: 640px;
  max-height: 85vh;
  background: #FFFFFF;
  border-radius: 24px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
}

.modal-header {
  padding: 24px 32px;
  border-bottom: 1px solid #F1F5F9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.modal-title {
  font-size: 20px;
  font-weight: 700;
  color: #1E293B;
}

.close-btn {
  font-size: 24px;
  color: #94A3B8;
  cursor: pointer;
  padding: 4px;
}

.modal-body {
  flex: 1;
  padding: 32px;
  overflow-y: auto;
  box-sizing: border-box;
}

.full-topic-title {
  font-size: 24px;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.4;
  margin-bottom: 12px;
  word-break: break-all;
}

.full-topic-date {
  font-size: 14px;
  color: #94A3B8;
  margin-bottom: 16px;
}

.full-topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 24px;
}

.full-topic-content {
  font-size: 16px;
  color: #475569;
  line-height: 1.8;
  word-break: break-all;
}

.modal-footer {
  padding: 24px 32px;
  border-top: 1px solid #F1F5F9;
  display: flex;
  gap: 16px;
  box-sizing: border-box;
}

.btn-generate-modal {
  flex: 1;
  height: 56px;
  background: #F3F4F6;
  color: #111827;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 16px;
  font-weight: 600;
  border: none;
}

.btn-primary-full {
  flex: 1.5;
  height: 56px;
  background: #111827;
  color: white;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 16px;
  font-weight: 600;
  border: none;
}

