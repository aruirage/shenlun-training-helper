/* pages/hot-list/index.wxss - React Minimalist Hot Topics Design */

page {
  --color-primary: #5A7D9A;
  --color-bg: #F9F9F8;
  --color-border: #EFEEEE;
  --color-text-main: #1A1A1A;
  --color-text-body: #4D4D4D;
  --color-text-sub: #999999;
  --color-white: #FFFFFF;
  background-color: var(--color-bg);
}

.hot-list-root {
  height: 100vh;
  overflow: hidden;
}

/* ==================== iPad 三栏布局 ==================== */
.hot-layout {
  display: flex;
  height: 100vh;
  background: var(--color-bg);
}

/* ========== 左侧导航 ========== */
.hot-nav {
  width: 240px;
  background: var(--color-white);
  border-right: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  padding: 32px 0;
}

.nav-header {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 0 16px 20px 16px;
  opacity: 0.8;
}

.nav-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.nav-title {
  font-size: 14px;
  font-weight: 600;
  color: #666;
  letter-spacing: -0.25px;
  white-space: nowrap;
}

.nav-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 0 16px;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  border-radius: 12px;
  font-size: 14px;
  color: var(--color-text-sub);
  transition: all 0.2s;
  cursor: pointer;
  user-select: none;
}

.nav-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.nav-item.active {
  background: rgba(90, 125, 154, 0.04);
  color: var(--color-primary);
  font-weight: 600;
}

.nav-item-icon {
  font-size: 16px;
  min-width: 16px;
}

.nav-item-text {
  font-size: 14px;
}

/* ========== 中间主内容区 ========== */
.hot-main {
  flex: 1;
  background: var(--color-white);
  overflow: hidden;
  min-width: 0;
  padding-right: 32px;
  box-sizing: border-box;
}

.main-content {
  max-width: 820px;
  margin: 0 auto;
  width: 100%;
  padding: 24px 40px 24px 28px;
  display: flex;
  flex-direction: column;
  gap: 18px;
  height: 100%;
}

/* 页面头部 */
.page-header {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.header-top {
  display: flex;
  align-items: flex-end;
  gap: 16px;
  flex-wrap: wrap;
}

.page-title {
  font-size: 20px;
  font-weight: 700;
  color: var(--color-text-main);
  letter-spacing: -0.5px;
}

.header-date {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 13px;
  font-weight: 500;
  opacity: 0.2;
}

.date-icon {
  font-size: 14px;
}

.date-text {
  font-size: 13px;
}

.page-subtitle {
  font-size: 13px;
  opacity: 0.4;
  font-weight: 500;
  line-height: 1.5;
}

/* 热点列表 */
.topic-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  flex: 1;
}

.topic-card {
  position: relative;
  padding: 24px 32px;
  border: 1px solid #F0F0F0;
  border-radius: 16px;
  background: var(--color-white);
  cursor: pointer;
  transition: all 0.2s;
  box-sizing: border-box;
  width: 100%;
}

.topic-card:active {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.03);
  border-color: #E5E5E5;
  transform: scale(0.99);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 32px;
  margin-bottom: 16px;
}

.card-title {
  font-size: 16px;
  font-weight: 700;
  color: var(--color-text-main);
  line-height: 1.4;
  letter-spacing: -0.5px;
  flex: 1;
  transition: color 0.2s;
}

.topic-card:active .card-title {
  color: var(--color-primary);
}

.card-arrow {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.02);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  flex-shrink: 0;
  transition: all 0.2s;
}

.topic-card:active .card-arrow {
  background: var(--color-text-main);
  color: var(--color-white);
}

.card-summary {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 24px;
  opacity: 0.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 16px;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 12px;
}

.meta-badge {
  padding: 4px 8px;
  border-radius: 4px;
  background: #F5F5F4;
  border: 1px solid #EEE;
  font-size: 10px;
  font-weight: 700;
  color: var(--color-text-sub);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.meta-date {
  font-size: 11px;
  font-weight: 500;
  opacity: 0.2;
}

.card-field {
  padding: 4px 12px;
  border-radius: 12px;
  background: rgba(90, 125, 154, 0.06);
  color: var(--color-primary);
  font-size: 11px;
  font-weight: 600;
}

/* ========== 右侧辅助栏 ========== */
.hot-aside {
  background: var(--color-white);
  border-left: 1px solid var(--color-border);
  flex-shrink: 0;
  overflow: visible;
  position: relative;
  transition: width 0.2s ease-out;
}

/* 调整手柄 */
.resize-handle {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8px;
  cursor: ew-resize;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.resize-handle:hover {
  background-color: rgba(90, 125, 154, 0.05);
}

.resize-line {
  width: 2px;
  height: 40px;
  background-color: #E5E5E5;
  border-radius: 2px;
}

.resize-handle:hover .resize-line {
  background-color: var(--color-primary);
}

.hot-aside.collapsed .aside-content,
.hot-aside.collapsed .resize-handle {
  opacity: 0;
  pointer-events: none;
}

.hot-aside.collapsed {
  border-color: transparent;
}

/* 隐藏按钮 */
.panel-toggle-btn {
  position: absolute;
  left: -22px;
  top: 12px;
  width: 24px;
  height: 24px;
  background-color: white;
  border: 1px solid #E5E5E5;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 101;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
}

.panel-toggle-btn:hover {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
}

.panel-toggle-btn:hover .toggle-icon {
  color: white;
}

.toggle-icon {
  font-size: 16px;
  font-weight: 700;
  color: #999;
}

.aside-content {
  padding: 40px 20px;
  display: flex;
  flex-direction: column;
  gap: 40px;
}

/* 训练流程说明 */
.training-section {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8px;
  opacity: 0.3;
}

.section-icon {
  font-size: 16px;
}

.section-label {
  font-size: 10px;
  font-weight: 700;
  color: var(--color-text-body);
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.steps-container {
  position: relative;
  padding-left: 12px;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.step-item {
  display: flex;
  gap: 20px;
  position: relative;
}

.step-dot {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: var(--color-white);
  border: 2px solid #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  z-index: 10;
}

.step-dot-inner {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #DDD;
}

.step-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
}

.step-title {
  font-size: 13px;
  font-weight: 700;
  color: #333;
}

.step-desc {
  font-size: 11px;
  opacity: 0.4;
  line-height: 1.4;
}

/* 历史记录 */
.history-section {
  padding-top: 24px;
  border-top: 1px solid var(--color-border);
}

.history-btn {
  width: 100%;
  padding: 16px;
  background: transparent;
  border: 1px dashed #DDD;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.2s;
  outline: none;
}

.history-btn:active {
  background: #F9F9F8;
}

.history-icon {
  font-size: 14px;
}

.history-text {
  font-size: 13px;
  font-weight: 500;
  color: #666;
  flex: 1;
  margin-left: 12px;
}

.history-arrow {
  font-size: 12px;
  opacity: 0;
  transition: all 0.2s;
  transform: translateX(-8px);
}

.history-btn:active .history-arrow {
  opacity: 0.3;
  transform: translateX(0);
}

/* ==================== 手机单栏布局 ==================== */
.phone-layout {
  height: 100vh;
  background: var(--color-bg);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.phone-header {
  flex-shrink: 0;
  padding: 24px;
  background: var(--color-white);
  border-bottom: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.phone-layout .header-top {
  gap: 8px;
}

.phone-layout .page-title {
  font-size: 18px;
}

.phone-layout .topic-list {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
  gap: 12px;
}

.phone-layout .topic-card {
  padding: 16px;
}

.phone-layout .card-header {
  gap: 16px;
  margin-bottom: 12px;
}

.phone-layout .card-title {
  font-size: 14px;
}

.phone-layout .card-arrow {
  width: 24px;
  height: 24px;
  font-size: 14px;
}

.phone-layout .card-summary {
  font-size: 12px;
  margin-bottom: 16px;
}

.phone-layout .card-footer {
  gap: 12px;
}
